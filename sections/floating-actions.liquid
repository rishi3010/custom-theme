<style>
  .floating { position: fixed; right: 14px; bottom: 14px; display: grid; gap: 10px; z-index: 60; }
  .floating a { display: inline-flex; align-items: center; justify-content:center; width:44px; height:44px; border-radius: 999px; background: var(--color-accent); color:#fff; box-shadow: var(--style-shadow); }
  .floating a.secondary { background: var(--color-surface); color: var(--color-foreground); border: 1px solid var(--color-border); }
</style>

<section class="floating full-width" aria-hidden="true">
  <div class="floating">
    {% if section.settings.show_back_to_top %}
      <a href="#MainContent" aria-label="Back to top">‚Üë</a>
    {% endif %}
    {% if section.settings.show_search %}
      <a href="/search" class="secondary" aria-label="Search">üîç</a>
    {% endif %}
    {% if section.settings.show_quick_cart %}
      <a href="/cart" aria-label="Cart">üõí</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Floating actions",
  "settings": [
    { "type": "checkbox", "id": "show_back_to_top", "label": "Show back to top", "default": true },
    { "type": "checkbox", "id": "show_live_chat", "label": "Show live chat (placeholder)", "default": false },
    { "type": "checkbox", "id": "show_wishlist", "label": "Show wishlist (placeholder)", "default": false },
    { "type": "checkbox", "id": "show_quick_cart", "label": "Show quick cart", "default": true },
    { "type": "checkbox", "id": "show_search", "label": "Show search", "default": true }
  ]
}
{% endschema %}
