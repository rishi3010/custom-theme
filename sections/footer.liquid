<style>
  .footer { background: var(--color-surface); border-top: 1px solid var(--color-border); margin-top: 48px; }
  .footer__top { display: grid; gap: 28px; grid-template-columns: repeat(1, minmax(0,1fr)); padding: 36px 0; }
  .footer__bottom { border-top: 1px solid var(--color-border); padding: 16px 0; display: flex; flex-wrap: wrap; align-items: center; justify-content: space-between; gap: 12px; color: var(--color-text-light); font-size: .95rem; }
  @media (min-width: 992px) { .footer__top { grid-template-columns: 2fr 1fr 1fr 1fr; } }
  .footer h4 { font-size: 1rem; margin-bottom: 10px; color: var(--color-foreground); }
  .footer a { color: var(--color-foreground); }
  .footer a:hover { color: var(--color-accent); }
  .newsletter { display: grid; gap: 10px; }
  .newsletter input[type="email"] { width: 100%; }
  .socials { display: flex; gap: 10px; }
</style>

<footer class="footer">
  <div class="page-width footer__top">
    <div>
      <h4>{{ section.settings.about_heading }}</h4>
      <p style="color: var(--color-text-light);">{{ section.settings.about_text }}</p>
      {% if section.settings.show_socials %}
        <div class="socials" style="margin-top: 12px;">
          {% for block in section.blocks %}
            {% if block.type == 'social' and block.settings.url != blank %}
              <a href="{{ block.settings.url }}" target="_blank" rel="noopener" aria-label="{{ block.settings.label }}">{{ block.settings.label }}</a>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div>
      <h4>{{ section.settings.menu_1_title }}</h4>
      {% if section.settings.menu_1 != blank %}
        <ul role="list" style="display:grid; gap:8px;">
          {% for link in section.settings.menu_1.links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>

    <div>
      <h4>{{ section.settings.menu_2_title }}</h4>
      {% if section.settings.menu_2 != blank %}
        <ul role="list" style="display:grid; gap:8px;">
          {% for link in section.settings.menu_2.links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>

    <div>
      <h4>{{ section.settings.newsletter_title }}</h4>
      {% if section.settings.show_newsletter %}
        <form method="post" action="/contact#newsletter" accept-charset="UTF-8" class="newsletter">
          <input type="hidden" name="form_type" value="customer">
          <input type="hidden" name="utf8" value="âœ“">
          <input type="email" name="contact[email]" placeholder="{{ 'general.newsletter_form.email_placeholder' | t | default: 'Email address' }}" required>
          <button type="submit" class="btn">{{ section.settings.newsletter_button_text }}</button>
        </form>
      {% endif %}
    </div>
  </div>

  <div class="page-width footer__bottom">
    <div>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}</div>
    {% if section.settings.show_payment_icons %}
      <div style="opacity:.9;">{{ shop.enabled_payment_types | payment_type_svg_tag: class: 'payment-icon' }}</div>
    {% endif %}
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    { "type": "text", "id": "about_heading", "label": "About heading", "default": "About us" },
    { "type": "textarea", "id": "about_text", "label": "About text", "default": "We deliver premium accessories at snap speed. Quality products, fast shipping, and great support." },
    { "type": "checkbox", "id": "show_socials", "label": "Show social links", "default": true },

    { "type": "text", "id": "menu_1_title", "label": "Menu 1 title", "default": "Shop" },
    { "type": "link_list", "id": "menu_1", "label": "Menu 1" },

    { "type": "text", "id": "menu_2_title", "label": "Menu 2 title", "default": "Support" },
    { "type": "link_list", "id": "menu_2", "label": "Menu 2" },

    { "type": "checkbox", "id": "show_newsletter", "label": "Show newsletter", "default": true },
    { "type": "text", "id": "newsletter_title", "label": "Newsletter title", "default": "Stay in the loop" },
    { "type": "text", "id": "newsletter_button_text", "label": "Newsletter button text", "default": "Subscribe" },

    { "type": "checkbox", "id": "show_payment_icons", "label": "Show payment icons", "default": true },
    { "type": "text", "id": "copyright_text", "label": "Copyright text", "default": "All rights reserved." }
  ],
  "blocks": [
    {
      "type": "social",
      "name": "Social link",
      "settings": [
        { "type": "text", "id": "label", "label": "Label", "default": "Instagram" },
        { "type": "url", "id": "url", "label": "URL" }
      ]
    }
  ],
  "max_blocks": 6
}
{% endschema %}
