<style>
  .promo { background: var(--color-accent); color: #fff; }
  .promo .inner { display: flex; align-items: center; justify-content: center; gap: 12px; padding: 10px 0; }
  .promo a { color: #fff; text-decoration: underline; }
</style>

<section class="promo full-width">
  <div class="page-width inner">
    <strong>{{ section.settings.heading }}</strong>
    <span>{{ section.settings.description }}</span>
    {% if section.settings.discount_code != blank %}
      <span style="background: rgba(255,255,255,.18); padding: 4px 10px; border-radius: 999px;">{{ section.settings.discount_code }}</span>
    {% endif %}
    {% if section.settings.button_text != blank and section.settings.button_url != blank %}
      <a class="btn btn-secondary" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
  
</section>

{% schema %}
{
  "name": "Promo banner",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Welcome to our store" },
    { "type": "text", "id": "description", "label": "Description", "default": "Exclusive offers available now" },
    { "type": "text", "id": "discount_code", "label": "Discount code" },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "Shop now" },
    { "type": "url", "id": "button_url", "label": "Button link" }
  ]
}
{% endschema %}
