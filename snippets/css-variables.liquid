<style>
  {{ settings.type_primary_font | font_face: font_display: 'swap' }}

  :root {
    --page-width: {{ settings.max_page_width | default: '90rem' }};
    --page-margin: {{ settings.min_page_margin | default: 20 }}px;

    --font-primary--family: {{ settings.type_primary_font.family | default: 'system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif' }};

    --color-background: {{ settings.background_color | default: '#0F0F0F' }};
    --color-foreground: {{ settings.foreground_color | default: '#FFFFFF' }};
    --color-accent: {{ settings.accent_color | default: '#00D4FF' }};
    --color-secondary: {{ settings.secondary_color | default: '#FF6B35' }};
    --color-text-light: {{ settings.text_light | default: '#B0B0B0' }};
    --color-border: {{ settings.border_color | default: '#2A2A2A' }};
    --color-surface: {{ settings.surface_color | default: '#1A1A1A' }};
    --color-surface-hover: {{ settings.surface_hover | default: '#252525' }};

    --style-border-radius: 12px;
    --style-border-radius-inputs: {{ settings.input_corner_radius | default: 8 }}px;
    --style-shadow: 0 10px 20px rgba(0,0,0,0.25);
    --style-shadow-hover: 0 14px 28px rgba(0,0,0,0.35);
    --style-shadow-light: 0 6px 12px rgba(0,0,0,0.18);
    --transition-smooth: 220ms ease;
  }

  body {
    background-color: var(--color-background);
    color: var(--color-foreground);
  }

  .page-width {
    width: min(100%, var(--page-width));
    margin-inline: auto;
    padding-inline: clamp(12px, 2.2vw, 28px);
  }
</style>
